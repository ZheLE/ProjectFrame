<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--热点详情页样式-->
    <style name="DrawerTheme" parent="AppTheme.Base">

        <!--注意：如果布局文件父容器为DrawerLayout，则clipToPadding fitsSystemWindows属性不能完美兼容，需要在布局文件中设置-->
        <item name="android:clipToPadding">false</item>
        <item name="android:fitsSystemWindows">true</item>
        <!--透明状态栏 如果不设置 clipToPadding fitsSystemWindows ToolBar控件会与状态栏重叠-->
        <item name="android:windowTranslucentStatus">true</item>

        <!--<item name="android:windowTranslucentNavigation">true</item>-->
        <!--<item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>-->
    </style>

    <!--要闻详情页style-->
    <style name="ImpTheme" parent="AppTheme.Base">

        <!--透明状态栏 如果不设置 clipToPadding fitsSystemWindows ToolBar控件会与状态栏重叠-->
        <item name="android:windowTranslucentStatus">true</item>
    </style>

</resources>