<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_menu_height"
        android:gravity="center"
        android:background="@color/top_menu_bg"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/top_new_hot"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="@string/top_hot"
            android:textColor="@drawable/screen_text_style"
            style="@style/top_menu_txtStyle" />

        <TextView
            android:id="@+id/top_new_culture"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:textColor="@drawable/screen_text_style"
            android:text="@string/top_culture"
            style="@style/top_menu_txtStyle" />

        <TextView
            android:id="@+id/top_new_imp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:textColor="@drawable/screen_text_style"
            android:text="@string/top_import"
            style="@style/top_menu_txtStyle"/>

        <TextView
            android:id="@+id/top_new_event"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:textColor="@drawable/screen_text_style"
            android:text="@string/top_event"
            style="@style/top_menu_txtStyle"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_cursor_height"
        android:background="@color/top_cursor_bg"
        android:orientation="horizontal"
        android:weightSum="4">

        <ImageView
            android:id="@+id/cursor"
            android:layout_width="0dp"
            android:layout_height="@dimen/top_cursor_height"
            android:layout_weight="1"
            android:background="@android:color/holo_red_light"
            android:scaleType="matrix" />

    </LinearLayout>

</LinearLayout>
