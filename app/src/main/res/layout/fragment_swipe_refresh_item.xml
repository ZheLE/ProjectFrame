<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/space_middle"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_img"
        android:layout_width="@dimen/item_img_width"
        android:layout_height="@dimen/item_img_height"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_middle"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_txt_tile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="标题标" />

        <TextView
            android:id="@+id/item_txt_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_middle"
            android:text="摘要摘要" />
    </LinearLayout>

</LinearLayout>
